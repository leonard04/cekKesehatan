<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_batuk"
    android:background="@color/colorPrimary"
    tools:context=".fragments.Batuk">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Sesering apakah anda"/>

        <TextView
            android:id="@+id/fragment_tv_title"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Batuk"/>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/img_fragment"
            android:src="@drawable/img_person"/>

        <com.rey.material.widget.Button
            android:layout_gravity="center"
            android:id="@+id/batuk_btnPilih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih"
            android:background="@color/colorPrimaryDark"
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>

    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/bottom_navigation"/>

</RelativeLayout>