<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.ViewKonfirmasi">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        layout="@layout/header_layout"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asesmen ini dirancang dengan tujuan untuk memprediksi risiko Anda terpapar COVID-19. Dengan menyetujui konsensus ini, maka Anda mengizinkan pengambilan data asesmen Anda untuk membantu memahami COVID-19 lebih lanjut."
        android:layout_centerInParent="true"
        android:layout_above="@+id/tx_bot"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ck_setuju"
        android:text="Anda tidak wajib menyetujui konsensus ini. Kami tidak mengambil data identitas Anda dan tidak akan menyalahgunakan hasil asesmen ini."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tx_bot"
        android:textSize="11dp"
        android:textAlignment="center"/>

    <com.rey.material.widget.CheckBox
        android:id="@+id/ck_setuju"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="12dp"
        android:text="Saya setuju"/>

    <com.rey.material.widget.Button
        android:id="@+id/btnMulai"
        style="@style/Material.Drawable.Ripple.Touch.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/ck_setuju"
        android:background="@drawable/button_color_accent"
        android:padding="20dp"
        android:text="Mulai Asesmen"
        android:textColor="#fff" />


</RelativeLayout>