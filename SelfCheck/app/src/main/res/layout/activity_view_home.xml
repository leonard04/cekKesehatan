<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.ViewHome"
    android:id="@+id/consLayout">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        layout="@layout/header_layout"/>

    <ImageView
        android:layout_above="@+id/layout_title"
        android:id="@+id/img_home"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_person" />

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_above="@id/btnStart"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:text="DIAGNOSA MANDIRI"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:text="powered by tetapdirumah.id"/>
    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/btnStart"
        style="@style/Material.Drawable.Ripple.Touch.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="29dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_color_accent"
        android:padding="20dp"
        android:text="Mulai Asesmen"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/btnSpeedDial"
            app:sdExpansionMode="bottom"
            style="@style/SpeedDial.Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            app:sdMainFabClosedBackgroundColor="@color/colorPrimaryDark"
            app:sdMainFabOpenedBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom|end"
            app:sdMainFabClosedSrc="@drawable/ic_menu_black_24dp"
            app:sdMainFabAnimationRotateAngle="180"
            />

    </LinearLayout>



</RelativeLayout>